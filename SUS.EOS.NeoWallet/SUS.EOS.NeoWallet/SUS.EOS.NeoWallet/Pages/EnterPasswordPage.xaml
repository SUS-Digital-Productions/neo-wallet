<?xml version="1.0" encoding="utf-8"?>
<ContentPage
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="SUS.EOS.NeoWallet.Pages.EnterPasswordPage"
  Title="Unlock Wallet"
>
  <ScrollView>
    <VerticalStackLayout Padding="24" Spacing="20" VerticalOptions="Center">
      <!-- Lock Icon -->
      <Label Text="ðŸ”’" FontSize="64" HorizontalOptions="Center" Margin="0,40,0,20" />
      <!-- Title -->
      <Label Text="Welcome Back" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />
      <Label
        Text="Enter your password to unlock your wallet"
        FontSize="14"
        TextColor="{DynamicResource Gray600}"
        HorizontalTextAlignment="Center"
        Margin="0,0,0,20"
      />
      <!-- Password Entry Frame -->
      <Border Padding="20">
        <VerticalStackLayout Spacing="16">
          <Label Text="Password" FontSize="14" FontAttributes="Bold" />
          <Grid ColumnDefinitions="*,Auto">
            <Entry
              x:Name="PasswordEntry"
              Placeholder="Enter your password"
              IsPassword="True"
              Keyboard="Text"
              ReturnType="Done"
              Grid.Column="0"
            />
            <!-- Show / Hide Button -->
            <Button
              x:Name="TogglePasswordButton"
              Text="ðŸ‘"
              FontSize="18"
              BackgroundColor="Transparent"
              Clicked="OnTogglePasswordClicked"
              Grid.Column="1"
            />
          </Grid>
          <!-- Validation / Error Text -->
          <Label
            x:Name="ErrorLabel"
            Text=""
            TextColor="Red"
            FontSize="14"
            IsVisible="False"
            HorizontalOptions="Center"
          />
          <!-- Login Button -->
          <Button
            x:Name="LoginButton"
            Text="Unlock Wallet"
            HeightRequest="55"
            FontSize="16"
            CornerRadius="10"
            Clicked="OnLoginClicked"
            BackgroundColor="{DynamicResource Primary}"
            TextColor="White"
          />
        </VerticalStackLayout>
      </Border>
      <!-- Forgot Password Info -->
      <Label
        Text="Forgot your password? You can restore your wallet using your 12-word recovery phrase."
        FontSize="12"
        TextColor="{DynamicResource Gray500}"
        HorizontalTextAlignment="Center"
        Margin="0,20,0,0"
      />
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
