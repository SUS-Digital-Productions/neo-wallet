<?xml version="1.0" encoding="utf-8"?>
<ContentPage
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="SUS.EOS.NeoWallet.Pages.RecoverAccountPage"
  Title="Recover Wallet"
>
  <ScrollView>
    <VerticalStackLayout Padding="24" Spacing="20">
      <Label
        Text="Recover Wallet"
        FontSize="28"
        FontAttributes="Bold"
        HorizontalTextAlignment="Center"
      />
      <Label
        Text="Enter your recovery phrase or QR code"
        FontSize="16"
        HorizontalTextAlignment="Center"
        TextColor="{DynamicResource Gray600}"
      />
      <Border BackgroundColor="{DynamicResource Gray200}" Padding="20">
        <VerticalStackLayout Spacing="16">
          <Editor
            x:Name="RecoveryPhraseEditor"
            Placeholder="Enter 12 or 24-word recovery phrase"
            HeightRequest="150"
            BackgroundColor="{DynamicResource Gray100}"
          />
          <Label x:Name="ValidationLabel" Text="" FontSize="12" IsVisible="False" />
          <Label
            Text="OR"
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"
            Margin="0,10,0,10"
          />
          <Button
            x:Name="ScanQRButton"
            Text="Scan QR Code"
            BackgroundColor="Transparent"
            TextColor="{DynamicResource Primary}"
            BorderColor="{DynamicResource Primary}"
            BorderWidth="1"
            HeightRequest="50"
            CornerRadius="10"
            Clicked="OnScanQRClicked"
          />
        </VerticalStackLayout>
      </Border>
      <Button
        x:Name="RecoverButton"
        Text="Recover Wallet"
        BackgroundColor="{DynamicResource Primary}"
        TextColor="White"
        HeightRequest="50"
        CornerRadius="10"
        IsEnabled="False"
        Clicked="OnRecoverClicked"
      />
      <Button
        x:Name="CancelButton"
        Text="Cancel"
        BackgroundColor="Transparent"
        TextColor="{DynamicResource Gray700}"
        BorderColor="{DynamicResource Gray300}"
        BorderWidth="1"
        HeightRequest="50"
        CornerRadius="10"
        Clicked="OnCancelClicked"
      />
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
