<?xml version="1.0" encoding="UTF-8"?>
<Shell
  x:Class="SUS.EOS.NeoWallet.AppShell"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  Shell.FlyoutBehavior="Disabled"
  Title="SUS.EOS.NeoWallet"
>
  <!-- Simple loading page - navigation handled by App.xaml.cs -->
  <ShellContent Route="Root">
    <ContentPage BackgroundColor="{DynamicResource BackgroundLight}">
      <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
        <ActivityIndicator IsRunning="True" Color="{DynamicResource Primary}" WidthRequest="50" HeightRequest="50" />
        <Label Text="Loading..." FontSize="18" HorizontalOptions="Center" />
      </VerticalStackLayout>
    </ContentPage>
  </ShellContent>
</Shell>
