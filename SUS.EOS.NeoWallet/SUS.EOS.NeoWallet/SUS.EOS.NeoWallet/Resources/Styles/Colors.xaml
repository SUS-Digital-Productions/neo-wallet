<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
>
  <!-- Neo Wallet Color Palette -->
  <!-- Primary Colors - Neo Green -->
  <Color x:Key="PrimaryLight">#00E599</Color>
  <Color x:Key="PrimaryDark">#00E599</Color>
  <Color x:Key="PrimaryLighter">#66EFBB</Color>
  <Color x:Key="PrimaryDarker">#00B37A</Color>
  <!-- Secondary Colors - Accent Blue -->
  <Color x:Key="SecondaryLight">#4A90E2</Color>
  <Color x:Key="SecondaryDark">#5BA3FF</Color>
  <!-- Background Colors -->
  <Color x:Key="BackgroundLight">#F8FAFC</Color>
  <Color x:Key="BackgroundDark">#0F172A</Color>
  <Color x:Key="SurfaceLight">#F1F5F9</Color>
  <Color x:Key="SurfaceDark">#1E293B</Color>
  <Color x:Key="CardLight">#FFFFFF</Color>
  <Color x:Key="CardDark">#1E293B</Color>
  <!-- Text Colors -->
  <Color x:Key="TextPrimaryLight">#0F172A</Color>
  <Color x:Key="TextPrimaryDark">#F8FAFC</Color>
  <Color x:Key="TextSecondaryLight">#64748B</Color>
  <Color x:Key="TextSecondaryDark">#94A3B8</Color>
  <!-- Border Colors -->
  <Color x:Key="BorderLight">#E2E8F0</Color>
  <Color x:Key="BorderDark">#334155</Color>
  <!-- Status Colors -->
  <Color x:Key="Success">#10B981</Color>
  <Color x:Key="Warning">#F59E0B</Color>
  <Color x:Key="Error">#EF4444</Color>
  <Color x:Key="Info">#3B82F6</Color>
  <!-- Grayscale (Tailwind-inspired) -->
  <Color x:Key="White">#FFFFFF</Color>
  <Color x:Key="Black">#000000</Color>
  <Color x:Key="Gray50">#F8FAFC</Color>
  <Color x:Key="Gray100">#F1F5F9</Color>
  <Color x:Key="Gray200">#E2E8F0</Color>
  <Color x:Key="Gray300">#CBD5E1</Color>
  <Color x:Key="Gray400">#94A3B8</Color>
  <Color x:Key="Gray500">#64748B</Color>
  <Color x:Key="Gray600">#475569</Color>
  <Color x:Key="Gray700">#334155</Color>
  <Color x:Key="Gray800">#1E293B</Color>
  <Color x:Key="Gray900">#0F172A</Color>
  
  <!-- Default Primary/Secondary -->
  <Color x:Key="Primary">#00E599</Color>
  <Color x:Key="Secondary">#3B82F6</Color>
  <Color x:Key="Tertiary">#8B5CF6</Color>
  
  <!-- Theme-aware resources (use these in pages) -->
  <Color x:Key="PageBackgroundColor">#F8FAFC</Color>
  <Color x:Key="Card">#FFFFFF</Color>
  <Color x:Key="Surface">#F1F5F9</Color>
  <Color x:Key="TextPrimary">#0F172A</Color>
  <Color x:Key="TextSecondary">#64748B</Color>
  <Color x:Key="Border">#E2E8F0</Color>
  
  <!-- Chain-specific colors -->
  <Color x:Key="WaxColor">#F89022</Color>
  <Color x:Key="EosColor">#000000</Color>
  <Color x:Key="TelosColor">#571AFF</Color>
  <Color x:Key="ProtonColor">#7543E3</Color>
  <Color x:Key="UxColor">#FF2D6A</Color>
  
  <!-- Utility colors -->
  <Color x:Key="MidnightBlue">MidnightBlue</Color>
  <Color x:Key="Magenta">Magenta</Color>
</ResourceDictionary>
